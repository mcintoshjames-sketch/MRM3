# MRM API Environment Configuration
# Copy this file to .env and customize for your environment

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# Database connection string
# For production, use secure credentials and external host
DATABASE_URL=postgresql://mrm_user:mrm_pass@db:5432/mrm_db

# JWT Secret Key - MUST be changed in production!
# Generate with: openssl rand -base64 48
# The application will FAIL TO START if this is the default value in production
SECRET_KEY=dev-secret-key-change-in-production

# Environment mode: "development" or "production"
# In production mode, SECRET_KEY validation is enforced
ENVIRONMENT=development

# CORS allowed origins (comma-separated)
# Development: http://localhost:5173,http://localhost:5174
# Production: https://app.mrmqmistest.org
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# JWT Algorithm (default: HS256)
ALGORITHM=HS256

# Access token expiry in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Analytics hardening (optional)
ANALYTICS_DB_ROLE=
ANALYTICS_SEARCH_PATH=
ANALYTICS_LOCK_TIMEOUT=2s
ANALYTICS_IDLE_IN_TRANSACTION_TIMEOUT=30s

# =============================================================================
# PRODUCTION CHECKLIST
# =============================================================================
# Before deploying to production, ensure:
# 1. SECRET_KEY is set to a secure random value (NOT the default)
# 2. ENVIRONMENT=production
# 3. CORS_ORIGINS includes only your production domain(s)
# 4. DATABASE_URL points to production database with secure credentials
